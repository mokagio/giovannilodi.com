
@import 'nib/vendor'
@import 'griddy'

@import '../javascripts/vendor/font-awesome/css/font-awesome.css'
// override font location
@font-face
  font-family: 'FontAwesomeMoka'
  location = 'https://github.com/FortAwesome/Font-Awesome/raw/b1a8ad47303509e70e56079396fad2afadfd96d5/font'
  src: url(location + '/fontawesome-webfont.eot?v=3.2.1')
  src: url(location + '/fontawesome-webfont.eot?#iefix&v=3.2.1') format('embedded-opentype'), 
    url(location + '/fontawesome-webfont.woff?v=3.2.1') format('woff'), 
    url(location + '/fontawesome-webfont.ttf?v=3.2.1') format('truetype'), 
    url(location + '/fontawesome-webfont.svg#fontawesomeregular?v=3.2.1') format('svg')
  font-weight: normal
  font-style: normal
[class^="icon-"],
[class*=" icon-"]
  font-family: FontAwesomeMoka

sublime_black = rgb(39, 40, 34)
sublime_green = rgb(166, 226, 42)
sublime_pruple = rgb(151, 129, 255)
sublime_yellow = rgb(236, 219, 116)
sublime_blue = rgb(98, 217, 239)
sublime_red = #f92672

// 12 columns grid system
.row
  grid-system(12, 20px, '.col')

.page
  max-width: 700px
  margin: 0 auto

body
  font: 14px Monaco, monospace;
  color: white
  background: sublime_black
  margin-left: 20px
  margin-right: 20px

a
  color: sublime_red
  text-decoration: none

h1_size = 40px
h1_line_height = 1

h1
  font-size: h1_size
  line-height: h1_line_height
  
  span.subtitle
    display: inline-block
    font-size: (h1_size / 2)
    color: sublime_pruple

  a
    color: white

// Index
#who
  strong
    color: sublime_green

#work
  a
    color: sublime_red
  a:not(:first-of-type)
    color: lighten(sublime_red, 10%)

#spare-time
  a
    color: sublime_blue

#contacts
  margin-top: 2.5em
  a
    color: sublime_yellow
    display: inline-block
    font-size: 1.4em

    &:not(:first-of-type)
      margin-left: 16px

// Open Source Page
.open-source
  ul
    margin-left: 0
    padding-left: 0
    list-style: none

    li:not(:last-child)
      margin-bottom: .65em